@model _6DostawsPizza.Models.User

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}



<form asp-action="Register" method="post">
    <div>
        <label>Ім'я</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Вік</label>
        <input asp-for="Age" type="number" />
    </div>
    <div>
        <label>Скільки одиниць товару ви бажаєте замовити?</label>
        <input asp-for="ProductCount" type="number" min="1" />
    </div>
    <button type="submit">Підтвердити</button>
</form>
